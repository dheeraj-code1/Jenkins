pipeline {
  agent {
    docker { 
      image 'node:16-alpine'
      args '-u root' // Changed to root user to avoid permission issues
    }
  }
  stages {
    stage('Checkout Code') {
      steps {
        checkout scm
        sh 'ls -la'
      }
    }
    
    stage('Install package') {
      steps {
        dir('my-first-pipeline') {
          // Create and set ownership of npm cache directory
          sh '''
            mkdir -p /.npm
            chown -R $(id -u):$(id -g) /.npm
            npm install --prefix $(pwd)
          '''
        }
      }
    }

    stage('run app') {
      steps {
        dir('my-first-pipeline') { // Ensure we are in the correct directory
          sh 'npm run start --prefix $(pwd)'
        }
      }
    }
  }
}
