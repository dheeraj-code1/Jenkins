pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }
  stages {
    stage('Checkout Code') {
            steps {
                // Use the SCM settings from the Jenkins job configuration
                checkout scm
                sh 'ls -la'
            }
    }
    stage('Install package') {
      steps {
        sh 'npm install'
      }
    }

    stage('run app') {
      steps {
        sh 'npm run start'
      }
    }
  }
}
